---
interface Props {
  name : string;
  url : string;
  isBig? : boolean;
}

const { url, name, isBig} = Astro.props;
const id = url.split('/').at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
class="
rounded flex flex-col justify-center items-center p-2 shadow-xl m-5
"
href=`/pokemons/${name}`
>
  <img
  src={imgSrc}
  alt=`sprait oficial del pokemon ${name}, epico`
  class:list={[{'lg:w-50 h-auto': isBig,}]}
  >
  <p
  class=" text-xl text-center text-slate-200 m-10 capitalize" 
  >{name}</p>
</a>
