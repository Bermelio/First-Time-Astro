---
interface Props {
  name : string;
  url : string;
  isBig? : boolean;
}

const { url, name, isBig} = Astro.props;
const id = url.split('/').at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- href=`/pokemons/${name}` -->
<a
class="
flex flex-col justify-center items-center p-2 shadow-sm m-2
bg-white-soul
"
href=`/pokemon/${id}`
>
  <img
  transition:name=`${name}-image`
  src={imgSrc}
  alt=`sprait oficial del pokemon ${name}, epico`
  class:list={[{'lg:w-50 h-auto': isBig,}]}
  >
  <p
  class=" text-xl text-center text-black-soul m-10 capitalize" 
  >{name}</p>
</a>
