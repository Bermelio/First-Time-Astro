---
import MainLayout from "@layouts/MainLayout.astro";
const title = "Pokedex | Home";
---

<MainLayout title={title}>
	<div class="min-h-screen flex items-center justify-center px-4">
		<div class="text-center max-w-2xl">
			<h1 class="text-5xl md:text-6xl font-bold mb-6 bg-linear-to-r from-indigo-500 via-purple-500 to-pink-500 bg-clip-text text-transparent ">
				Welcome to PokéAPI
			</h1>
			<p class="text-xl text-gray-600 mb-8 leading-relaxed">
				Explora el mundo Pokémon y descubre información detallada sobre tus criaturas favoritas
			</p>
			<a 
				href="/pokemons/1" 
				class="inline-block px-8 py-4 bg-linear-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-full shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
			>
				Explorar Pokédex
			</a>
		</div>
	</div>
</MainLayout>