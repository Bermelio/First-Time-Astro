---
import PokeCard from "../components/PokeCard.astro";
import type { PokemonList } from "../interface/pokemon-list";
import MainLayout from "../layouts/MainLayout.astro";
const title = "Pokedex | Home"
const resp = await fetch("https://pokeapi.co/api/v2/pokemon")
const data = await (resp.json()) as PokemonList;

---
<MainLayout title={title}>
	<h1
	class="text-center text-5xl text-slate-100 p-5 
	bg-radial from-emerald-500 to-green-900
	rounded-b-xl shadow-lg
	">Lista de Pokemones
	</h1>

	<section
	class="grid grid-cols-1 sm:grid-cols-4 lg:grid-cols-5 gap-4 m-10">
	{data.results.map(({url, name}) => 
	<div class="hover:scale-115 duration-300">
		<PokeCard
		name = {name}
		url={url}
		/>
	</div>
	)}
	</section>
	
</MainLayout>
	
